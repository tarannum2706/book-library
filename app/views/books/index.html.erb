<p style="color: green"><%= notice %></p>

<br/>
<h1>List Of Books</h1>
<br/>
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Available</th>
       <th colspan="3"></th>
      </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
     <tr>
      <td><%= book.title%></td>
      <td><%= book.author%></td>
      <td> <%= if book.available == true
               "Yes"
             else
             "No"
           end  %></td>
    <% if current_user && current_user.librarian %>
        <td><%= link_to "View",book%></td>
        <% else %>
        <td><%= link_to "View",book%></td>
        <td><%= link_to 'Issue', new_student_path %></td>
      <% end %>
     </tr>
    <% end %>
</tbody>
</table>
